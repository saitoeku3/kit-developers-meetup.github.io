{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": { "*": ["src/types/*"] },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "strict": true,
    "types": ["react"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
